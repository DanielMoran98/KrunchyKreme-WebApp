<head>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
	<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
  <script src="javascripts/scroll.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
</head>

<body>
  <link rel="stylesheet" type="text/css" href="/stylesheets/manager.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <% include templates/nav%>

  <center>
    <h1 style="padding-top: 100px;">Manager</h1>


  <div id="managerContent">
    <div class="column">
      <h2>Popular Donuts</h2>

      <table>
        <tr>
          <th>Donut</th><th>Amount sold</th>
        </tr>
        <tr>
          <td>Original Glazed </td> <td> <%=popularDonuts[0].donut1 %> </td>
        </tr>
        <tr>
          <td> Strawberry Original </td> <td> <%=popularDonuts[0].donut2 %> </td>
        </tr>
        <tr>
          <td> White Chocolate & Milk Choc Drizzle </td> <td> <%=popularDonuts[0].donut3 %> </td>
        </tr>
        <tr>
          <td> Chocolate & Nutella / Hazlenuts </td> <td> <%=popularDonuts[0].donut4 %> </td>
        </tr>
        <tr>
          <td> Chocolate & M&Ms </td> <td> <%=popularDonuts[0].donut5 %> </td>
        </tr>


      </table>
    </div>

    <div class="column">
      <h2>Sales Performance</h2>
      <table>
        <tr>
          <th>Seller</th> <th>Total Revenue</th>
        </tr>
        <tr>
          <td> <%= sellerPerformance[0].seller%> </td> <td> €<%= sellerPerformance[0].totalSold %> </td>
        </tr>
        <tr>
          <td> <%= sellerPerformance[1].seller%> </td> <td> €<%= sellerPerformance[1].totalSold %> </td>
        </tr>
        <tr>
          <td> <%= sellerPerformance[2].seller%> </td> <td> €<%= sellerPerformance[2].totalSold %> </td>
        </tr>

      </table>
    </div>

    <div class="column">
      <h2>Chef Performance</h2>
      <table>
        <tr>
          <th>Chef</th> <th>Donuts Made</th>
        </tr>
        <tr>
          <td> <%= chefPerformance[0].chef%> </td> <td> <%= chefPerformance[0].totalDonuts %> </td>
        </tr>
        <tr>
          <td> <%= chefPerformance[1].chef%> </td> <td> <%= chefPerformance[1].totalDonuts %> </td>
        </tr>
      </table>
    </div>
  </div>

  </center>
</body>
